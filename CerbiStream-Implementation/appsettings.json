{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CerbiStream": {
    "PrimaryFile": "logs/primary-governed.log",
    "FallbackFile": "logs/fallback-encrypted.log",
    "EnableAes": true,
    "GovernanceProfile": "default",
    "GovernanceConfigPath": "cerbi_governance.json",
    "TelemetryEnrichment": true,
    "QueueBuffering": true,
    "Rotation": {
      "MaxFileSizeBytes": 1048576,
      "MaxFileAgeMinutes": 60
    }
  }
}
